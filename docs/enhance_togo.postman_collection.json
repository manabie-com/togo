		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Should re-assign value to token variable on environment once login success\", function () {",
							"    pm.response.to.have.status(200);",
							"    pm.response.to.have.jsonBody(\"data\");",
							"",
							"",
							"    var jsonData = JSON.parse(responseBody);",
							"    var token = jsonData[\"data\"];",
							"    pm.environment.set(\"token\", token);",
							"    pm.globals.set(\"token\", token);",
							"",
							"    pm.expect(pm.environment.get(\"token\")).to.equal(token);",
							"    console.log(`New token has been set in environment with value: ${token}`)",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
